{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .jumbotron {
            max-width: 50%;
        }

        form {
            max-width: 25%;
        }

        label {
            float: left;
        }

        @media (max-width: 575px) {
            h1 {
                font-size: 2.75rem !important;
            }

            form {
                max-width: 75%;
            }

            .jumbotron {
                max-width: 100%;
            }
        }

        @media (max-width: 991px) {
            form {
                max-width: 50%;
            }
        }
    </style>

    <div align="center">
        <div class="jumbotron">
            <h1 class="display-4">Create a new category</h1>
            <hr class="my-4"/>

            {{ form(form) }}
        </div>
    </div>
{% endblock %}