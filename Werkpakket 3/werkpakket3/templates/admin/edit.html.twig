{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .jumbotron {
            max-width: 50%;
        }

        form {
            max-width: 25%;
        }

        label {
            float: left;
        }

        @media (max-width: 575px) {
            h1 {
                font-size: 2.75rem !important;
            }

            form {
                max-width: 75%;
            }

            .jumbotron {
                max-width: 100%;
            }
        }

        @media (max-width: 991px) {
            form {
                max-width: 50%;
            }
        }
    </style>

    <div align="center">
        <div class="jumbotron">
            <h1 class="display-4">Edit User</h1>
            <hr class="my-4"/>

            <form action="{{ path('updateUser', {'id': user.id} )}})}}" method="POST">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="form-control" class="form-control" name="username" id="username" value="{{user.username}}">
                </div>
                <div class="form-group">
                    <label for="rolesString">Role</label>
                    <input type="form-control" class="form-control" name="rolesString" id="rolesString" value="{{user.rolesString}}">
                </div>
                <button type="submit" class="btn btn-dark">Update</button>
            </form>
        </div>
    </div>
{% endblock %}