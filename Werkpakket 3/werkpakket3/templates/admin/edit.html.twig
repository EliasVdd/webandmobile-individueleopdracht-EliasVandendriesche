{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <form action="{{ path('updateUser', {'id': user.id} )}})}}" method="POST">
            <div class="form-group">
                <label for="username">Username</label>
                <input type="form-control" class="form-control" name="username" id="username" value="{{user.username}}">
            </div>
            <div class="form-group">
                <label for="rolesString">Role</label>
                <input type="form-control" class="form-control" name="rolesString" id="rolesString" value="{{user.rolesString}}">
            </div>
                <button type="submit" class="btn btn-dark">Update</button>
        </form>
    </div>
{% endblock %}