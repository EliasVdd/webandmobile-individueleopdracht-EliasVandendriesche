{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .card {
            margin: 15px;
        }
        a {
            margin-bottom:15px;
        }
        .card-body {
            background: white;
        }
        .border-bottom border-gray pb-2 mb-0 {
            margin: 15px;
        }
    </style>
    {% set contentField = form_row(form.content) %}
    {% set reactButton = form_row(form.React) %}
    {% if messages %}
        {% if (is_granted('ROLE_MODERATOR')or is_granted('ROLE_ADMIN')) %}
            <div class="container">
                <div class="card">
                    {% for message in messages %}
                        <div class="card-body">
                            <h5 class="card-title">Category</h5>
                            <p class="card-text">{{ message }}</p>
                            <a href="{{ path('updatemessage', {'id': message.id}) }}" class="fas fa-pencil-alt"></a>
                            <a href="{{ path('deletemessage', {'id': message.id}) }}" class="fas fa-trash-alt"></a>
                            <h6 class="border-bottom border-gray pb-2 mb-0">Reactions</h6>
                            {% for reaction in message.reactions %}
                                <div class="media text-muted pt-3">
                                    <img data-src="holder.js/32x32?theme=thumb&amp;bg=007bff&amp;fg=007bff&amp;size=1" alt="32x32" class="mr-2 rounded" style="width: 32px; height: 32px;" src="data:image/svg+xml;charset=UTF-8,%3Csvg%20width%3D%2232%22%20height%3D%2232%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20viewBox%3D%220%200%2032%2032%22%20preserveAspectRatio%3D%22none%22%3E%3Cdefs%3E%3Cstyle%20type%3D%22text%2Fcss%22%3E%23holder_166d52df29f%20text%20%7B%20fill%3A%23007bff%3Bfont-weight%3Abold%3Bfont-family%3AArial%2C%20Helvetica%2C%20Open%20Sans%2C%20sans-serif%2C%20monospace%3Bfont-size%3A2pt%20%7D%20%3C%2Fstyle%3E%3C%2Fdefs%3E%3Cg%20id%3D%22holder_166d52df29f%22%3E%3Crect%20width%3D%2232%22%20height%3D%2232%22%20fill%3D%22%23007bff%22%3E%3C%2Frect%3E%3Cg%3E%3Ctext%20x%3D%2211.546875%22%20y%3D%2216.9%22%3E32x32%3C%2Ftext%3E%3C%2Fg%3E%3C%2Fg%3E%3C%2Fsvg%3E" data-holder-rendered="true">
                                    <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
                                        <strong class="d-block text-gray-dark">{{reaction.user.userName}}</strong>
                                        {{ reaction.content }}
                                    </p>
                                    {% if app.request.cookies.get('tokenCookie' ~ reaction.id) | trans == reaction.token %}
                                        <a href="{{ path('updatemessage', {'id': message.id}) }}" class="fas fa-pencil-alt"></a>
                                    {% endif %}
                                </div>
                            {% endfor %}
                            <form action="{{ path('reactToMessage', {'id': message.id}) }}" method="post">
                                {{ form_start(form) }}
                                {{ form_errors(form) }}
                                {{ contentField|raw }}
                                {{ reactButton|raw }}
                                {{ form_end(form) }}
                            </form>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% elseif is_granted('ROLE_USER') %}
            <ul>
                {% for message in messages %}
                    {% if message.userid == app.user.id %}
                        <li>
                            <div class="container">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">Category</h5>
                                        <p class="card-text">{{ message }}</p>
                                        <a href="{{ path('updatemessage', {'id': message.id}) }}" class="glyphicon glyphicon-pencil"></a>
                                        <a href="{{ path('deletemessage', {'id': message.id}) }}" class="glyphicon glyphicon-trash"></a>
                                    </div>
                                </div>
                            </div>
                        </li>
                    {% endif %}
                {% endfor %}
            </ul>
        {% else %}
            <p>No messages found for your account</p>

        {% endif %}
    {% else %}
        <p>No messages can be found</p>
    {% endif %}
{% endblock %}