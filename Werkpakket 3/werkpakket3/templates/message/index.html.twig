{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .card {
            margin: 15px;
        }
        .card-body {
            background: white;
        }
    </style>

    {% include 'navbar.html.twig' %}

    {% set contentField = form_row(form.content) %}
    {% set reactButton = form_row(form.React) %}
    {% if messages %}
        {% if (is_granted('ROLE_MODERATOR')or is_granted('ROLE_ADMIN')) %}
            <div class="container mt-5">
                <div class="card">
                    {% for message in messages %}
                        <div class="card-body">
                            <h5 class="card-title">Category</h5>
                            <p class="card-text">{{ message }}</p>
                            <a href="{{ path('updatemessage', {'id': message.id}) }}" class="fas fa-pencil-alt"></a>
                            <a href="{{ path('deletemessage', {'id': message.id}) }}" class="fas fa-trash-alt"></a>
                            {% for reaction in message.reactions %}
                                <p class="card-text">{{ reaction.content }}</p>
                            {% endfor %}
                            <form action="{{ path('reactToMessage', {'id': message.id}) }}" method="post">
                                {{ form_start(form) }}
                                {{ form_errors(form) }}
                                {{ contentField|raw }}
                                {{ reactButton|raw }}
                                {{ form_end(form) }}
                            </form>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% elseif is_granted('ROLE_USER') %}
            <ul>
                {% for message in messages %}
                    {% if message.userid == app.user.id %}
                        <li>
                            <div class="container">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">Category</h5>
                                        <p class="card-text">{{ message }}</p>
                                        <a href="{{ path('updatemessage', {'id': message.id}) }}" class="glyphicon glyphicon-pencil"></a>
                                        <a href="{{ path('deletemessage', {'id': message.id}) }}" class="glyphicon glyphicon-trash"></a>
                                    </div>
                                </div>
                            </div>
                        </li>
                    {% endif %}
                {% endfor %}
            </ul>
        {% else %}
            <p>No messages found for your account</p>

        {% endif %}
    {% else %}
        <p>No messages can be found</p>
    {% endif %}
{% endblock %}